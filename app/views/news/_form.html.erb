
<% if @news.errors.any? %>
    <ul>
        <% @news.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
        <% end %>
    </ul>
<% end %>
<div class="site-section bg-light">
      <div class="container">
        <div class="row">
            
          <div class="col-md-8 offset-md-2 mb-5">

            

            <%= form_for(@news, :html =>{class:"p-5 bg-white"}) do |f| %>

              <div class="row form-group">
                
                <div class="col-md-12">
                <%= f.label :title, class:"text-black" %><br/>
                <%= f.text_field :title, class:"form-control" %>
                  
                </div>
              </div>

              <div class="row form-group">
                <div class="col-md-12">
                <%= f.label :description, class:"text-black"  %><br/>
                <%= f.text_area :description, cols:"30", rows:"7", class:"form-control", placeholder:"Write your description here..."%>
                  
                </div>
              </div>

              <div class="row form-group">
                <div class="col-md-12">
                <%= f.submit class:"btn btn-primary py-2 px-4 text-white" %>
                </div>
              </div>

  
              <% end %>
          </div>
          
        </div>
      </div>
    </div>