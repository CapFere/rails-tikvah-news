<h1> Create new news</h1>
<%= form_for @news do |f| %>
    <div>
        <%= f.label :title %><br/>
        <%= f.text_field :title %>
    </div>
    <div>
        <%= f.label :description %><br/>
        <%= f.text_area :description %>
    </div>
    <div>
        <%= f.submit %>
    </div>
<% end %>